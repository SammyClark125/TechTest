@using UserManagement.Models
@model User

<h2>User Details</h2>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">@Model.Forename @Model.Surname</h5>
        <p class="card-text"><strong>Email:</strong> @Model.Email</p>
        <p class="card-text"><strong>Date of Birth:</strong> @Model.DateOfBirth.ToShortDateString()</p>
        <p class="card-text"><strong>Active:</strong> @(Model.IsActive ? "Yes" : "No")</p>
    </div>
</div>

<a asp-action="List" class="btn btn-secondary mt-3">Back to User List</a>
